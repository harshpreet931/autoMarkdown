{
  "name": "automarkdown",
  "version": "2.0.3",
  "description": "Intelligently convert codebases into markdown for LLMs to process and provide optimal insights",
  "main": "dist/index.js",
  "bin": {
    "automarkdown": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --runInBand",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "markdown",
    "codebase",
    "llm",
    "converter",
    "documentation",
    "automation"
  ],
  "author": "harshpreet931",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/harshpreet931/autoMarkdown.git"
  },
  "bugs": {
    "url": "https://github.com/harshpreet931/autoMarkdown/issues"
  },
  "homepage": "https://github.com/harshpreet931/autoMarkdown#readme",
  "devDependencies": {
    "@types/acorn": "^4.0.6",
    "@types/estree": "^1.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.17",
    "@types/react": "^19.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/minimatch": "^5.1.2",
    "@typescript-eslint/typescript-estree": "^8.45.0",
    "acorn": "^8.15.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "ignore": "^7.0.5",
    "minimatch": "^9.0.5"
  }
}
